
@{
    ViewBag.Title = "危化品申报（生产）";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    .layui-table-cell{height:auto;line-height:1;}
    .layui-table-view .layui-table td{padding:3px 0;}
</style>
<script>
    layui.use(['datatable', 'win10'], function () {
        var datatable = layui.datatable,
            Win10 = layui.win10,
            $ = layui.jquery,
            tableId="datagrid",
            reloadTable = function () {
                datatable.reload(tableId, { page: { curr: 1 } });
            };

        datatable.render({
            elem: '#datagrid'
          , url: baseConst.odata + "T_YH_Records_Entity"
          , cellMinWidth: 80 //全局定义常规单元格的最小宽度，layui 2.2.1 新增
          , height: 'full-100'
          , id: tableId
          , getFilters: function ()
          {
              var filters = [];
              filters.push("IsDeleted eq false");
              return filters;
          }
          , cols: [[
              { type: 'checkbox' }
            , {
                field: '', width: 200, align: "center", title: '危险化学品名称', templet: function (data) {
                return "甲苯";
                    }
            }
            , {
                field: 'CommonlyCnt', width: 120, align: "center", title: '危规号', templet: function (data) {
                    return "108-88-3";
                }
            }
            , {
                field: 'MajorCnt', width: 120, align: "center", title: '年产量', templet: function (data) {
                    return "14000T";
                }
            }
            , {
                field: '', width: 120, align: "center", title: '年销售量', templet: function (data) {
                    return "9000T";
                }
            }
            , {
                field: '', align: "center", width: 180, title: '最大存储量', templet: function (data) {
                    return "1550T";
                }
            }
            , {
                field: '', align: "center", width: 120, title: '贮存地点', templet: function (data) {
                    return "危险品仓库";
                }
            }
            , {
                field: '', align: "center", width: 120, title: '包装方式', templet: function (data) {
                    return "桶装";
                }
            }
            , {
                field: '', align: "center", width: 200, title: '生产许可证', templet: function (data) {
                    return "有";
                }
            }
            , {
                field: '', align: "center", width: 120, title: '销售许可证', templet: function (data) {
                    return "有";
                }
            }
            , {
                field: '', align: "center", width: 200, title: '是否重点监管化学品', templet: function (data) {
                    return "是";
                }
            }
            , {
                field: '', align: "center", width: 200, title: '是否易制毒化学品', templet: function (data) {
                    return "是";
                }
            }
                , {
                    field: '', width: 200, align: "center", title: '是否易制爆化学品', templet: function (data) {
                        return "是";
                    } 
                } ,
                {
                    field: '', width: 200, align: "center", title: '是否剧毒化学品', templet: function (data) {
                        return "否";

                    }
                }
          ]],
            page: true
        });


        var fncontrolMenus = {
            fnadd: function () {
                fncontrolMenus.open({
                    editMode: "add",
                    pageData: {
                        WorkTime:new Date()
                    }
                });
            },
            fncopy: function () {
                var datas = datatable.checkStatus(tableId).data;
                if (datas.length != 1) { TopWin.layer.msg((datas.length ? "只能" : "至少") + "选择一行数据！"); return; }
                fncontrolMenus.open({
                    editMode: "add",
                    pageData: datas[0]
                });
            },
            fnmodify: function () {
                var datas = datatable.checkStatus(tableId).data;
                if (datas.length != 1) { TopWin.layer.msg((datas.length ? "只能" : "至少") + "选择一行数据！"); return; }
                fncontrolMenus.open({
                    editMode: "edit",
                    pageData: datas[0]
                });
            },
            fndelete: function () {
                var datas = datatable.checkStatus(tableId).data;
                if (!datas.length) { TopWin.layer.msg("至少选择一行数据！"); return; }
                var _index = TopWin.layer.load(), total = datas.length;
                $.each(datas, function (_i, _t) {
                    $.Cm_Ajax.putAsync(baseConst.odata + "T_XT_WorkRecords_Entity('" + _t.RecordId + "')", { IsDeleted: true }).always(function () {
                        total--;
                        if (!total)
                        {
                            TopWin.layer.close(_index);
                            TopWin.layer.msg("操作成功！",{time:1500});
                            reloadTable();
                        }
                    });
                });
            },
            fnview: function () {
                var datas = datatable.checkStatus(tableId).data;
                if (datas.length != 1) { TopWin.layer.msg((datas.length ? "只能" : "至少") + "选择一行数据！"); return; }
                fncontrolMenus.open({
                    editMode: "view",
                    pageData: datas[0]
                });
            },
            fnimport: function () {

            },
            fnexport: function () {

            },
            open: function (options) {
                TopWin.layer.open({
                    type: 2,
                    title: "危化品申报（生产）信息维护",
                    area: ['850px', '530px'],
                    fixed: true, //不固定
                    maxmin: false,
                    content: "@Url.Content("~/WH/WHSCEdit")",
                    success: function (frm) {
                        var _frm = frm.find("iframe").get(0).contentWindow;
                        if (typeof _frm.pageLoad == "function") {
                            _frm.pageLoad(options);
                        }
                    },
                    close: function (index) {

                    },
                    end: function (index) {
                        reloadTable();
                    }
                });
            }
        };


        $("#controlMenus>.layui-btn").click(function () {
            var type = $(this).attr("data-type");
            fncontrolMenus[type]();
        });
    });
</script>

<div class="content-padding">
    <div class="layui-btn-group" id="controlMenus">
        <button class="layui-btn layui-btn-sm layui-btn-normal" data-type="fnadd"><i class="fa fa-plus"></i> 新增</button>
    </div>
    <table class="layui-hide" id="datagrid"></table>
</div>