    textarea.layui-textarea { height: 200px!important; }
    .layui-form.lb-p-m .layui-inline >.layui-form-label { width: 120px; }
    .layui-form.lb-p-m .layui-inline > .layui-form-label+ .layui-input-block { margin-left: 150px; }
</style>

